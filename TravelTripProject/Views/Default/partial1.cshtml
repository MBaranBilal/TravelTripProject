@using TravelTripProject.Models.Siniflar
@model List<Blog>

<div class="con-bot">
    @foreach (var item in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src=@item.BlogImage alt="">
            </div>
            <div class="left-text">
                <h4>@item.Baslik</h4>
                <span class="doller">@item.Tarih.ToShortDateString()</span>
                <p>@item.Aciklama.Substring(0,100) ...</p>
                <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Devamını Oku&gt;&gt;</span></a></p>
            </div>
        </div>
    }
    @Html.Action("partial2","Default")
    <div class="clear"></div>
</div>
