@model TravelTripProject.Models.Siniflar.Hakkimizda

@{
    ViewBag.Title = "Hakkımızda";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h3>Hakkımızda İşlemleri</h3>
<br />

<form class="form-group" method="post" style="color:firebrick; font-size:20px;">
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.FotoUrl)
    @Html.TextBoxFor(x => x.FotoUrl, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Aciklama)
    @Html.TextAreaFor(x => x.Aciklama,10,1, new { @class = "form-control" })
    <br />
    <button class="btn btn-warning"><i class="bi bi-pencil"></i> Güncelle</button>
    <br />
</form>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">



